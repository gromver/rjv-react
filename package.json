{
  "name": "rjv-react",
  "version": "5.0.0-alpha.15",
  "description": "React components for Rjv (Reactive JSON Validator)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/cjs/index.d.ts",
  "repository": "https://github.com/gromver/rjv-react",
  "author": "Gayazov Roman <gromver5@gmail.com>",
  "license": "MIT",
  "scripts": {
    "info": "npm-scripts-info",
    "storybook": "start-storybook",
    "cleanup": "shx rm -rf dist package",
    "prebuild": "npm run cleanup",
    "build": "gulp build",
    "lint": "tslint --project .",
    "test": "yarn lint && jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "changelog": "standard-version",
    "prerelease": "npm run test",
    "release": "standard-version",
    "postrelease": "npm run build && npm run release:github && npm run release:npm",
    "release:github": "git push --no-verify --follow-tags origin develop",
    "release:npm": "npm publish",
    "reset": "git clean -dfx && git reset --hard && yarn"
  },
  "scripts-info": {
    "info": "Display information about the scripts",
    "build": "(Trash and re)build the library",
    "lint": "Lint all typescript source files",
    "test": "Lint and test the library",
    "test:watch": "Watch test files, rerun relevant tests",
    "test:coverage": "Run tests, generate the coverage report",
    "changelog": "Bump package.json version, update CHANGELOG.md, tag a release",
    "reset": "Delete all untracked files and reset the repo to the last commit",
    "release": "Test, bump package.json version, update CHANGELOG.md, tag a release, clean, build, push release to github and publish to npm"
  },
  "engines": {
    "node": ">=4.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 120
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "npm run lint",
      "pre-push": "npm test -- --bail --onlyChanged"
    }
  },
  "standard-version": {
    "skip": {
      "changelog": true
    }
  },
  "keywords": [
    "rjv",
    "react",
    "rx",
    "validation",
    "field",
    "form",
    "json",
    "schema",
    "json-schema"
  ],
  "jest": {
    "rootDir": "src",
    "coverageDirectory": "../coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "dependencies": {
    "eventemitter2": "^6.4.3",
    "lodash": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "rjv": "^5.0.0-alpha.7"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@storybook/react": "^6.1.4",
    "@types/es6-promise": "^0.0.33",
    "@types/invariant": "^2.2.29",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.150",
    "@types/node": "^11.13.2",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-test-renderer": "^16.8.1",
    "antd": "^4.8.2",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^2.1.0",
    "gulp": "^4.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "husky": "^1.3.1",
    "jest": "^26.6.3",
    "lodash": "^4.17.15",
    "merge2": "^1.2.3",
    "npm-scripts-info": "^0.3.6",
    "path": "^0.12.7",
    "react": "^16.8.6",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-dom": "^16.13.1",
    "react-intl": "^5.10.4",
    "react-test-renderer": "^16.8.6",
    "rjv": "^5.0.0-alpha.7",
    "shx": "^0.3.2",
    "standard-version": "^8.0.2",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "tslint": "^5.4.3",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^4.0.5",
    "validate-commit-msg": "^2.14.0"
  }
}
